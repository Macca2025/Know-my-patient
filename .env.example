# Example .env file for Know My Patient
# Copy this file to .env and fill in your real credentials

# Application
APP_ENV=development
APP_SECRET=generate_random_32_character_key
APP_DEBUG=true

# Database
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=know_my_patient
DB_USER=your_db_user
DB_PASS=your_db_password

# Session
SESSION_LIFETIME=3600
SESSION_NAME=know_my_patient_session

# Error Monitoring (Sentry)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.2
SENTRY_SEND_DEFAULT_PII=false

# Email (if using)
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your_username
MAIL_PASSWORD=your_password

# SMTP Configuration for Password Reset Emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_AUTH=true
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_ENCRYPTION=tls

# Email Addresses
MAIL_FROM_ADDRESS=noreply@knowmypatient.nhs.uk
MAIL_FROM_NAME="Know My Patient"
MAIL_REPLY_TO=support@knowmypatient.nhs.uk

# SMTP Provider Examples:
# 
# Gmail (requires App Password if 2FA enabled):
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_ENCRYPTION=tls
#
# Outlook/Office365:
# SMTP_HOST=smtp.office365.com
# SMTP_PORT=587
# SMTP_ENCRYPTION=tls
#
# SendGrid:
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USERNAME=apikey
# SMTP_PASSWORD=your-sendgrid-api-key
#
# Mailgun:
# SMTP_HOST=smtp.mailgun.org
# SMTP_PORT=587
# SMTP_USERNAME=postmaster@yourdomain.mailgun.org
# SMTP_PASSWORD=your-mailgun-password
#
# AWS SES:
# SMTP_HOST=email-smtp.us-east-1.amazonaws.com
# SMTP_PORT=587
# SMTP_USERNAME=your-ses-smtp-username
# SMTP_PASSWORD=your-ses-smtp-password
MAIL_FROM=noreply@knowmypatient.com

# External APIs (if using)
TWILIO_SID=your_twilio_sid
TWILIO_TOKEN=your_twilio_token
TWILIO_PHONE=+1234567890
