{% extends 'layouts/base.html.twig' %}
{% block content %}
<div class="d-flex flex-column min-vh-100 section-gradient-light">
    <main class="flex-grow-1 d-flex justify-content-center align-items-center py-5 main-content">
        <div class="login-card bg-white rounded-4 p-4 p-lg-5 mt-5 mb-4 border-0 login-card-width">
            
            <!-- Icon and Title -->
            <div class="text-center mb-4">
                <div class="mb-4">
                    <i class="bi bi-question-circle-fill text-warning" style="font-size: 5rem;"></i>
                </div>
                <h1 class="display-3 fw-bold text-warning mb-3">404</h1>
                <h2 class="h4 fw-bold text-dark mb-3">Page Not Found</h2>
                <p class="text-muted mb-4">
                    Oops! The page you're looking for doesn't exist or has been moved.
                </p>
            </div>

            <!-- Action Buttons -->
            <div class="d-grid gap-3 mb-4">
                <a href="{{ url_for('home') }}" class="btn btn-primary btn-lg">
                    <i class="bi bi-house-fill me-2"></i>Go to Homepage
                </a>
                <button onclick="history.back()" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Go Back
                </button>
            </div>

            <!-- Quick Links -->
            <div class="mt-4">
                <h6 class="text-center text-muted mb-3">You might be looking for:</h6>
                <div class="row g-2">
                    <div class="col-4">
                        <a href="{{ url_for('login') }}" class="text-decoration-none">
                            <div class="text-center p-2 border rounded hover-shadow">
                                <i class="bi bi-box-arrow-in-right fs-3 text-primary mb-1"></i>
                                <small class="d-block">Login</small>
                            </div>
                        </a>
                    </div>
                    <div class="col-4">
                        <a href="{{ url_for('register') }}" class="text-decoration-none">
                            <div class="text-center p-2 border rounded hover-shadow">
                                <i class="bi bi-person-plus fs-3 text-success mb-1"></i>
                                <small class="d-block">Register</small>
                            </div>
                        </a>
                    </div>
                    <div class="col-4">
                        <a href="{{ url_for('support') }}" class="text-decoration-none">
                            <div class="text-center p-2 border rounded hover-shadow">
                                <i class="bi bi-question-circle fs-3 text-info mb-1"></i>
                                <small class="d-block">Support</small>
                            </div>
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </main>

    {% include 'layouts/footer.html.twig' %}
</div>
{% endblock %}
