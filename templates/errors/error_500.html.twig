{% extends 'layouts/base.html.twig' %}
{% set session = session|default({}) %}
{% set title = title|default('500 Internal Server Error') %}
{% set description = description|default('An unexpected error occurred on the server.') %}
{% set keywords = keywords|default('') %}
{% set canonical_url = canonical_url|default('/') %}
{% set app_name = app_name|default('Know My Patient') %}
{% set is_error_page = true %}
{% block content %}
<div class="d-flex flex-column min-vh-100">
    <main class="flex-grow-1 d-flex align-items-center">
        <div class="container text-center">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="error-page">
                        <h1 class="display-1 text-danger fw-bold mb-3">500</h1>
                        <h2 class="h3 mb-4 text-dark">Internal Server Error</h2>
                        <p class="lead text-muted mb-4">
                            Sorry, something went wrong on our end. Please try again later or contact support if the problem persists.
                        </p>
                        {% if exception is defined and exception is not null %}
                        <div class="alert alert-danger text-start mt-4" style="white-space: pre-wrap;">
                            <strong>Error:</strong> {{ exception.message }}<br>
                            <strong>File:</strong> {{ exception.file }}<br>
                            <strong>Line:</strong> {{ exception.line }}<br>
                            <strong>Trace:</strong>
                            <pre style="font-size: 0.9em;">{{ exception.traceAsString|default('') }}</pre>
                        </div>
                        {% endif %}
               
                        <div class="d-flex flex-column flex-md-row gap-3 justify-content-center mb-4">
                            <a href="{{ is_error_page ? '/' : url_for('home') }}" class="btn-modern-outline-primary w-100">
                                <i class="bi bi-house-fill me-2"></i>Go to Homepage
                            </a>
                                <button onclick="history.back()" class="btn-modern-outline-primary w-100 ">
                                    <i class="bi bi-arrow-left me-2"></i>Go Back
                                </button>
                        </div>
                        <div class="mt-5">
                            <h5 class="text-muted mb-3">You might be looking for:</h5>
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <a href="{{ is_error_page ? '/' : url_for('login') }}" class="text-decoration-none">
                                        <div class="card h-100 border-0 shadow-sm">
                                            <div class="card-body text-center">
                                                <i class="bi bi-box-arrow-in-right fs-1 text-primary mb-2"></i>
                                                <h6 class="card-title">NHS Staff Login</h6>
                                                <p class="card-text small text-muted">Access patient information</p>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                                <div class="col-md-4">
                                    <a href="{{ is_error_page ? '/' : url_for('register') }}" class="text-decoration-none">
                                        <div class="card h-100 border-0 shadow-sm">
                                            <div class="card-body text-center">
                                                <i class="bi bi-person-plus fs-1 text-success mb-2"></i>
                                                <h6 class="card-title">Create Profile</h6>
                                                <p class="card-text small text-muted">Register new account</p>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                                <div class="col-md-4">
                                    <a href="{{ is_error_page ? '/' : url_for('support') }}" class="text-decoration-none">
                                        <div class="card h-100 border-0 shadow-sm">
                                            <div class="card-body text-center">
                                                <i class="bi bi-question-circle fs-1 text-info mb-2"></i>
                                                <h6 class="card-title">Get Support</h6>
                                                <p class="card-text small text-muted">Need help or assistance?</p>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
{% endblock %}