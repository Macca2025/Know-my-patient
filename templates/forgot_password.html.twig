{% extends 'layouts/base.html.twig' %}
{% block content %}

<div class="d-flex flex-column min-vh-100 section-gradient-light">
    <main class="flex-grow-1 d-flex justify-content-center align-items-center py-5 main-content">
        <div class="login-card bg-white rounded-4 p-4 p-lg-5 mt-5 mb-4 border-0 login-card-width">

            <!-- Header -->
            <div class="text-center mb-4">
                <div class="login-logo-wrapper mb-4">
                    <img src="{{ companyLogo|default('images/logo.png') }}" alt="{{ app_name|default('Know My Patient') }}" class="login-logo">
                </div>
                <h2 class="login-title fw-bold mb-3 text-purple-primary">
                    <i class="bi bi-key me-2"></i>Forgot Password
                </h2>
                <p class="login-subtitle text-muted">
                    Enter your email address and we'll send you a link to reset your password.
                </p>
            </div>

            <!-- Flash Messages -->
            {% if session.flash_message %}
                <div class="alert alert-{{ session.flash_type|default('info') }} alert-dismissible fade show pe-5" role="alert">
                    {% if session.flash_type == 'success' %}
                        <i class="bi bi-check-circle me-2"></i>
                    {% elseif session.flash_type == 'danger' %}
                        <i class="bi bi-exclamation-triangle me-2"></i>
                    {% elseif session.flash_type == 'warning' %}
                        <i class="bi bi-exclamation-circle me-2"></i>
                    {% else %}
                        <i class="bi bi-info-circle me-2"></i>
                    {% endif %}
                    {{ session.flash_message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endif %}

            <!-- Forgot Password Form -->
            <form method="POST" action="/forgot-password" class="needs-validation" novalidate>
                <input type="hidden" name="{{ csrf.keys.name }}" value="{{ csrf.name }}">
                <input type="hidden" name="{{ csrf.keys.value }}" value="{{ csrf.value }}">

                <!-- Email Field -->
                <div class="mb-4">
                    <label for="email" class="form-label fw-bold">
                        <i class="bi bi-envelope me-1"></i>Email Address
                    </label>
                    <input 
                        type="email" 
                        class="form-control form-control-lg" 
                        id="email" 
                        name="email" 
                        placeholder="your.email@example.com"
                        required
                        autofocus
                    >
                    <div class="invalid-feedback">
                        Please enter a valid email address.
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="d-grid gap-3 mb-3">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-envelope me-2"></i>Send Reset Link
                    </button>

                    <!-- Back to Login -->
                    <a href="{{ url_for('login') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Back to Login
                    </a>
                </div>
            </form>

            <!-- Security Notice -->
            <div class="alert alert-info" role="alert">
                <h6 class="alert-heading fw-bold mb-2">
                    <i class="bi bi-shield-check me-2"></i>Security Notice
                </h6>
                <small>For your protection, you can only request 3 password resets per hour. The reset link expires after 1 hour.</small>
            </div>
        </div>
    </main>

    {% include 'layouts/footer.html.twig' %}
</div>

<!-- Bootstrap Form Validation -->
<script>
    (function () {
        'use strict'
        var forms = document.querySelectorAll('.needs-validation')
        Array.prototype.slice.call(forms).forEach(function (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault()
                    event.stopPropagation()
                }
                form.classList.add('was-validated')
            }, false)
        })
    })()
</script>

{% endblock %}
