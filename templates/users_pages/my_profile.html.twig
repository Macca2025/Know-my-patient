{% extends 'layouts/base.html.twig' %}

{% block content %}
{# Message and messageType can still be set by the controller if needed, but no POST logic in Twig #}
{% set message = message|default(null) %}
{% set messageType = messageType|default('info') %}
<div class="d-flex flex-column min-vh-100 admin-main bg-light">
    <main class="flex-grow-1 main-content">
        <div class="container-xxl py-4">

            <!-- Modern Header Section -->
            <div class="admin-header section-gradient-light rounded-4 shadow-sm mb-4 p-4 mt-80">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <h1 class="fw-bold text-purple-primary mb-2">
                            <i class="bi bi-person-badge-fill me-2"></i>
                            My Profile
                        </h1>
                        <p class="lead text-secondary mb-0">
                            Welcome, {{ currentUser.first_name ~ ' ' ~ currentUser.surname }}<br>
                            Manage your account information and settings.
                        </p>
                    </div>
                </div>
            </div>
            <!-- End Modern Header Section -->

            {# Alert Messages #}
            {% if message is defined and message %}
                <div class="alert alert-{{ messageType|default('info') }} alert-dismissible fade show shadow-sm" role="alert">
                    <i class="bi bi-{{ messageType == 'success' ? 'check-circle' : 'exclamation-triangle' }} me-2"></i>
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endif %}

            <div class="row g-4">
                <!-- Profile Form Card -->
                <div class="col-lg-8">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white border-bottom-0 pb-0">
                            <h5 class="mb-0 text-primary fw-semibold">
                                <i class="bi bi-pencil-square me-2"></i>Edit Profile
                            </h5>
                        </div>
                        <div class="card-body">
                            <form method="POST" action="/my-profile" id="profileForm" autocomplete="off">
                                <input type="hidden" name="{{ csrf.keys.name }}" value="{{ csrf.name }}">
                                <input type="hidden" name="{{ csrf.keys.value }}" value="{{ csrf.value }}">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label for="first_name" class="form-label fw-semibold">
                                            <i class="bi bi-person me-1"></i>First Name *
                                        </label>
                                        <input type="text" class="form-control rounded-pill" id="first_name" name="first_name"
                                               value="{{ currentUser.first_name|e }}" required maxlength="100">
                                    </div>
                                    <div class="col-md-6">
                                        <label for="surname" class="form-label fw-semibold">
                                            <i class="bi bi-person me-1"></i>Surname *
                                        </label>
                                        <input type="text" class="form-control rounded-pill" id="surname" name="surname"
                                               value="{{ currentUser.surname|e }}" required maxlength="100">
                                    </div>
                                    <div class="col-12">
                                        <label for="email" class="form-label fw-semibold">
                                            <i class="bi bi-envelope me-1"></i>Email Address *
                                        </label>
                                        <input type="email" class="form-control rounded-pill" id="email" name="email"
                                               value="{{ currentUser.email|e }}" required maxlength="191">
                                        <div class="form-text">
                                            <i class="bi bi-info-circle me-1"></i>
                                            This email is used for login and notifications.
                                        </div>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-end mt-4">
                                    <button type="submit" name="update_profile" class="btn btn-primary rounded-pill px-4 shadow-sm">
                                        <i class="bi bi-check-lg me-2"></i>Update Profile
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Account Summary Card -->
                <div class="col-lg-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-info text-white border-bottom-0">
                            <h6 class="mb-0 fw-semibold">
                                <i class="bi bi-info-circle me-2"></i>Account Summary
                            </h6>
                        </div>
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                                    <span class="text-muted">User ID:</span>
                                    <span class="badge bg-secondary rounded-pill">#{{ currentUser.user_id|e }}</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                                    <span class="text-muted">Role:</span>
                                    <span class="badge bg-primary rounded-pill">
                                        {% set role_display = currentUser.role|default(userRole) %}
                                        {% if role_display == 'nhs_user' %}
                                            NHS Access
                                        {% else %}
                                            {{ role_display|title }}
                                        {% endif %}
                                    </span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                                    <span class="text-muted">Member Since:</span>
                                    <span>
                                        {% if currentUser.created_at is defined and currentUser.created_at %}
                                            {{ currentUser.created_at|date('M j, Y') }}
                                        {% else %}
                                            <span class="text-muted">Date unavailable</span>
                                        {% endif %}
                                    </span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Accordion for Security, Support, Account Management -->
            <div class="row g-4 mt-2">
                <div class="col-lg-8">
                    <div class="accordion" id="profileAccordion">
                        <!-- Security Settings -->
                        <div class="accordion-item border-0 shadow-sm mb-3">
                            <h2 class="accordion-header" id="securityHeading">
                                <button class="accordion-button collapsed rounded-top" type="button" data-bs-toggle="collapse" data-bs-target="#securityCollapse" aria-expanded="false" aria-controls="securityCollapse">
                                    <i class="bi bi-shield-lock me-2"></i>
                                    <strong>Security & Privacy</strong>
                                    <span class="ms-2 text-muted small">Manage password and privacy settings</span>
                                </button>
                            </h2>
                            <div id="securityCollapse" class="accordion-collapse collapse" aria-labelledby="securityHeading" data-bs-parent="#profileAccordion">
                                <div class="accordion-body">
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <div class="card border-0 shadow-sm h-100">
                                                <div class="card-header bg-warning text-dark">
                                                    <h6 class="mb-0">
                                                        <i class="bi bi-lock me-2"></i>Password Security
                                                    </h6>
                                                </div>
                                                <div class="card-body">
                                                    <p class="text-muted mb-3">Keep your account secure with a strong password.</p>
                                                    <button type="button" class="btn btn-warning rounded-pill w-100" data-bs-toggle="modal" data-bs-target="#changePasswordModal">
                                                        <i class="bi bi-key me-1"></i>Change Password
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="card border-0 shadow-sm h-100">
                                                <div class="card-header bg-info text-white">
                                                    <h6 class="mb-0">
                                                        <i class="bi bi-shield-check me-2"></i>Privacy Settings
                                                    </h6>
                                                </div>
                                                <div class="card-body">
                                                    <p class="text-muted mb-3">Review our privacy policy and data handling practices.</p>
                                                    <a href="{{ url_for('privacy_policy') }}" class="btn btn-info rounded-pill w-100">
                                                        <i class="bi bi-eye me-1"></i>View Privacy Policy
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Support & Help -->
                        <div class="accordion-item border-0 shadow-sm mb-3">
                            <h2 class="accordion-header" id="supportHeading">
                                <button class="accordion-button collapsed rounded-top" type="button" data-bs-toggle="collapse" data-bs-target="#supportCollapse" aria-expanded="false" aria-controls="supportCollapse">
                                    <i class="bi bi-question-circle me-2"></i>
                                    <strong>Support & Help</strong>
                                    <span class="ms-2 text-muted small">Get assistance and support resources</span>
                                </button>
                            </h2>
                            <div id="supportCollapse" class="accordion-collapse collapse" aria-labelledby="supportHeading" data-bs-parent="#profileAccordion">
                                <div class="accordion-body">
                                    <div class="row g-3">
                                        <div class="col-md-8">
                                            <div class="card border-0 shadow-sm">
                                                <div class="card-header bg-success text-white">
                                                    <h6 class="mb-0">
                                                        <i class="bi bi-headset me-2"></i>Get Support
                                                    </h6>
                                                </div>
                                                <div class="card-body">
                                                    <p class="mb-3">Need help? Our support team is here to assist you with any questions or issues.</p>
                                                    <div class="row g-2">
                                                        <div class="col-sm-6">
                                                            <a href="{{ url_for('support') }}" class="btn btn-success w-100 rounded-pill">
                                                                <i class="bi bi-chat-dots me-1"></i>Contact Support
                                                            </a>
                                                        </div>
                                                        <div class="col-sm-6">
                                                            <a href="mailto:support@knowmypatient.info" class="btn btn-outline-success w-100 rounded-pill">
                                                                <i class="bi bi-envelope me-1"></i>Email Us
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="card border-0 shadow-sm h-100">
                                                <div class="card-header bg-light">
                                                    <h6 class="mb-0 text-muted">
                                                        <i class="bi bi-info-square me-2"></i>Quick Links
                                                    </h6>
                                                </div>
                                                <div class="card-body">
                                                    <div class="d-grid gap-2">
                                                        <a href="{{ url_for('dashboard') }}" class="btn btn-outline-primary btn-sm rounded-pill">
                                                            <i class="bi bi-house me-1"></i>Dashboard
                                                        </a>
                                                        <a href="{{ url_for('privacy_policy') }}" class="btn btn-outline-secondary btn-sm rounded-pill">
                                                            <i class="bi bi-file-text me-1"></i>Privacy Policy
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Account Management -->
                        <div class="accordion-item border-0 shadow-sm">
                            <h2 class="accordion-header" id="accountMgmtHeading">
                                <button class="accordion-button collapsed rounded-top" type="button" data-bs-toggle="collapse" data-bs-target="#accountMgmtCollapse" aria-expanded="false" aria-controls="accountMgmtCollapse">
                                    <i class="bi bi-gear me-2"></i>
                                    <strong>Account Management</strong>
                                    <span class="ms-2 text-muted small">Advanced account settings and actions</span>
                                </button>
                            </h2>
                            <div id="accountMgmtCollapse" class="accordion-collapse collapse" aria-labelledby="accountMgmtHeading" data-bs-parent="#profileAccordion">
                                <div class="accordion-body">
                                    <div class="card border-danger shadow-sm">
                                        <div class="card-header bg-danger text-white">
                                            <h6 class="mb-0">
                                                <i class="bi bi-exclamation-triangle me-2"></i>Danger Zone
                                            </h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between">
                                                <div>
                                                    <h6 class="text-danger mb-2">Delete Account</h6>
                                                    <p class="text-muted mb-0">
                                                        Permanently delete your account and all associated data.<br>
                                                        <strong>This action cannot be undone.</strong>
                                                    </p>
                                                </div>
                                                <div class="mt-3 mt-md-0">
                                                    <a href="/delete-account" onclick="return confirm('Are you sure you want to delete your account? This action cannot be undone.');" class="btn btn-danger rounded-pill">
                                                        <i class="bi bi-trash me-1"></i>Delete Account
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Optionally, add more summary or info cards here -->
            </div>
        </div>
    </main>
</div>

<!-- Change Password Modal -->
<div class="modal fade" id="changePasswordModal" tabindex="-1" aria-labelledby="changePasswordModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title" id="changePasswordModalLabel">
                    <i class="bi bi-lock me-2"></i>Change Password
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="POST" action="/my-profile" id="changePasswordForm">
                <input type="hidden" name="{{ csrf.keys.name }}" value="{{ csrf.name }}">
                <input type="hidden" name="{{ csrf.keys.value }}" value="{{ csrf.value }}">
                <input type="hidden" name="change_password" value="1">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="current_password" class="form-label fw-semibold">
                            <i class="bi bi-key me-1"></i>Current Password *
                        </label>
                        <input type="password" class="form-control" id="current_password" name="current_password" required>
                    </div>
                    <div class="mb-3">
                        <label for="new_password" class="form-label fw-semibold">
                            <i class="bi bi-shield-lock me-1"></i>New Password *
                        </label>
                        <input type="password" class="form-control" id="new_password" name="new_password" required minlength="8">
                        <div class="form-text">
                            <i class="bi bi-info-circle me-1"></i>Minimum 8 characters
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="confirm_password" class="form-label fw-semibold">
                            <i class="bi bi-shield-check me-1"></i>Confirm New Password *
                        </label>
                        <input type="password" class="form-control" id="confirm_password" name="confirm_password" required minlength="8">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary rounded-pill" data-bs-dismiss="modal">
                        <i class="bi bi-x-lg me-1"></i>Cancel
                    </button>
                    <button type="submit" class="btn btn-warning rounded-pill">
                        <i class="bi bi-check-lg me-1"></i>Change Password
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

{% endblock %}