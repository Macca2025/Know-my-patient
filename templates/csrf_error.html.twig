{% extends 'layouts/base.html.twig' %}

{% block content %}
<div class="d-flex flex-column min-vh-100 section-gradient-light">
    <main class="flex-grow-1 d-flex justify-content-center align-items-center py-5 main-content">
        <div class="login-card bg-white rounded-4 p-4 p-lg-5 mt-5 mb-4 border-0 login-card-width">
            
            <!-- Icon and Title -->
            <div class="text-center mb-4">
                <div class="mb-4">
                    <i class="bi bi-shield-x text-danger" style="font-size: 4rem;"></i>
                </div>
                <h2 class="fw-bold text-danger mb-3">
                    Security Validation Failed
                </h2>
                <p class="text-muted mb-4">
                    Your request could not be processed due to a security validation error.
                </p>
            </div>

            <!-- Reasons Alert -->
            <div class="alert alert-warning" role="alert">
                <h6 class="alert-heading fw-bold mb-2">
                    <i class="bi bi-info-circle me-2"></i>This usually happens when:
                </h6>
                <ul class="mb-0 ps-3">
                    <li>Your session has expired</li>
                    <li>The form was submitted from an untrusted source</li>
                    <li>You've been inactive for too long</li>
                    <li>Your browser didn't send required security tokens</li>
                </ul>
            </div>

            <!-- Action Buttons -->
            <div class="d-grid gap-3 mt-4">
                <a href="{{ app.request.headers.get('referer') ?: '/' }}" class="btn btn-primary btn-lg">
                    <i class="bi bi-arrow-clockwise me-2"></i>Try Again
                </a>
                <a href="{{ url_for('home') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-house me-2"></i>Go to Home
                </a>
                <a href="{{ url_for('login') }}" class="btn btn-outline-primary">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Login to Your Account
                </a>
            </div>

            <!-- Help Text -->
            <div class="text-center mt-4">
                <small class="text-muted">
                    <i class="bi bi-lightbulb me-1"></i>
                    If this problem persists, please try clearing your browser cookies and logging back in.
                </small>
            </div>

            <!-- Support Link -->
            <div class="text-center mt-3">
                <small>
                    <a href="{{ url_for('support') }}" class="text-decoration-none">
                        <i class="bi bi-question-circle me-1"></i>Contact Support
                    </a>
                </small>
            </div>

        </div>
    </main>

    {% include 'layouts/footer.html.twig' %}
</div>
{% endblock %}
