{% extends 'layouts/base.html.twig' %}

{% block content %}

<style>
    .table-responsive {
        overflow-x: auto;
        overflow-y: visible;
    }
    
    .dropdown-menu {
        position: absolute !important;
        z-index: 9999 !important;
    }
    
    td.position-relative {
        position: relative !important;
    }
</style>

<div class="container py-5">
    <!-- Flash Messages -->
    {% if session.flash_message %}
        <div class="alert alert-{{ session.flash_type|default('info') }} alert-dismissible fade show" role="alert">
            {{ session.flash_message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endif %}
    
    <!-- Debug CSRF (Remove after testing) -->
    {% if false %}
    <div class="alert alert-info">
        <strong>CSRF Debug:</strong><br>
        csrf.keys.name: {{ csrf.keys.name }}<br>
        csrf.keys.value: {{ csrf.keys.value }}<br>
        csrf.name: {{ csrf.name }}<br>
        csrf.value: {{ csrf.value }}
    </div>
    {% endif %}
  <!-- Dashboard Header Styled Like Support Page -->
    <div class="admin-header section-gradient-light rounded-4 shadow-sm mb-4 p-4 mt-80">
        <div class="d-flex align-items-center justify-content-between">
            <div>
                <h1 class="fw-bold text-purple-primary mb-2">
                    <i class="bi bi-person-badge-fill me-2"></i>
                    {{ dashboardTitle|default('Membership Card Management') }}
                </h1>
                <p class="lead text-secondary mb-0">
                Welcome, {{ currentUser.first_name ~ ' ' ~ currentUser.surname }}
                {{ dashboardSubtitle|default('Membership Card Management Dashboard.') }}
                </p>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 col-12 mb-3">
            <div class="admin-stat-card card h-100">
                <div class="card-body text-center">
                    <div class="admin-stat-icon bg-primary bg-opacity-10 mb-2">
                        <i class="bi bi-people text-primary"></i>
                    </div>
                    <div class="admin-stat-value h4 mb-0">{{ stats.total_requests|default(0) }}</div>
                    <div class="admin-stat-label small">Total Requests</div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-12 mb-3">
            <div class="admin-stat-card card h-100">
                <div class="card-body text-center">
                    <div class="admin-stat-icon bg-info bg-opacity-10 mb-2">
                        <i class="bi bi-hourglass-split text-info"></i>
                    </div>
                    <div class="admin-stat-value h4 mb-0">{{ stats.pending|default(0) }}</div>
                    <div class="admin-stat-label small">Pending</div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-12 mb-3">
            <div class="admin-stat-card card h-100">
                <div class="card-body text-center">
                    <div class="admin-stat-icon bg-success bg-opacity-10 mb-2">
                        <i class="bi bi-printer text-success"></i>
                    </div>
                    <div class="admin-stat-value h4 mb-0">{{ stats.printing|default(0) }}</div>
                    <div class="admin-stat-label small">Printing</div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-12 mb-3">
            <div class="admin-stat-card card h-100">
                <div class="card-body text-center">
                    <div class="admin-stat-icon bg-warning bg-opacity-10 mb-2">
                        <i class="bi bi-truck text-warning"></i>
                    </div>
                    <div class="admin-stat-value h4 mb-0">{{ stats.posted|default(0) }}</div>
                    <div class="admin-stat-label small">Posted</div>
                </div>
            </div>
        </div>
    </div>
    <!-- Filter/Search Section in its own card -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label for="search" class="form-label">Search</label>
                    <input type="text" class="form-control" id="search" name="search" placeholder="Name, UID, Email, Tracking..." value="{{ filters.search|default('') }}">
                </div>
                <div class="col-md-2">
                    <label for="status" class="form-label">Status</label>
                    <select class="form-select" id="status" name="status">
                        <option value="all" {% if filters.status is empty or filters.status == 'all' %}selected{% endif %}>All Statuses</option>
                        <option value="pending" {% if filters.status == 'pending' %}selected{% endif %}>Pending</option>
                        <option value="approved" {% if filters.status == 'approved' %}selected{% endif %}>Approved</option>
                        <option value="printing" {% if filters.status == 'printing' %}selected{% endif %}>Printing</option>
                        <option value="quality_check" {% if filters.status == 'quality_check' %}selected{% endif %}>Quality Check</option>
                        <option value="posted" {% if filters.status == 'posted' %}selected{% endif %}>Posted</option>
                        <option value="delivered" {% if filters.status == 'delivered' %}selected{% endif %}>Delivered</option>
                        <option value="cancelled" {% if filters.status == 'cancelled' %}selected{% endif %}>Cancelled</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="from_date" class="form-label">From Date</label>
                    <input type="text" class="form-control" id="from_date" name="from_date" placeholder="dd/mm/yyyy" value="{{ filters.from_date|default('') }}">
                </div>
                <div class="col-md-2">
                    <label for="to_date" class="form-label">To Date</label>
                    <input type="text" class="form-control" id="to_date" name="to_date" placeholder="dd/mm/yyyy" value="{{ filters.to_date|default('') }}">
                </div>
                <div class="col-md-2">
                    <label for="sort_by" class="form-label">Sort By</label>
                    <select class="form-select" id="sort_by" name="sort_by">
                        <option value="request_date" {% if filters.sort_by == 'request_date' %}selected{% endif %}>Request Date</option>
                        <option value="status" {% if filters.sort_by == 'status' %}selected{% endif %}>Status</option>
                        <option value="card_type" {% if filters.sort_by == 'card_type' %}selected{% endif %}>Card Type</option>
                    </select>
                </div>
                <div class="col-md-1">
                    <label for="order" class="form-label">Order</label>
                    <select class="form-select" id="order" name="order">
                        <option value="desc" {% if filters.order == 'DESC' %}selected{% endif %}>Desc</option>
                        <option value="asc" {% if filters.order == 'ASC' %}selected{% endif %}>Asc</option>
                    </select>
                </div>
                <div class="col-md-12 text-end">
                    <button type="submit" class="btn btn-modern-outline-primary">Apply Filters</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Table Section in its own card -->
    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <h3 class="mb-4">All Card Requests</h3>
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Request Date</th>
                            <th>Patient Details</th>
                            <th>Contact Info</th>
                            <th>Card Type</th>
                            <th>Status</th>
                            <th>Tracking</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if cardRequests|length > 0 %}
                            {% for req in cardRequests %}
                                <tr>
                                    <td>{{ req.request_date|date('Y-m-d H:i') }}</td>
                                    <td>
                                        <strong>{{ req.patient_uid }}</strong><br>
                                        <small>User ID: {{ req.user_id }}</small>
                                    </td>
                                    <td>
                                        {% if req.contact_email %}<i class="bi bi-envelope"></i> {{ req.contact_email }}<br>{% endif %}
                                        {% if req.contact_phone %}<i class="bi bi-telephone"></i> {{ req.contact_phone }}{% endif %}
                                    </td>
                                    <td>{{ req.card_type|capitalize }}</td>
                                    <td>
                                        <span class="badge bg-{{ req.status == 'pending' ? 'secondary' : (req.status == 'printing' ? 'info' : (req.status == 'posted' ? 'primary' : (req.status == 'delivered' ? 'success' : (req.status == 'cancelled' ? 'danger' : 'warning'))) ) }}">
                                            {{ req.status|replace({'_': ' '})|capitalize }}
                                        </span>
                                    </td>
                                    <td>
                                        {% if req.tracking_number %}
                                            <span class="badge bg-light text-dark">{{ req.tracking_number }}</span>
                                        {% else %}-{% endif %}
                                    </td>
                                    <td class="text-nowrap position-relative">
                                        <div class="d-inline-flex align-items-center gap-1">
                                            <button class="btn btn-sm btn-outline-primary p-1 btn-square-32" 
                                                    title="View Details"
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#viewModal{{ req.id }}">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-success p-1 btn-square-32" 
                                                    title="Edit Status"
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#editModal{{ req.id }}">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button class="btn btn-sm btn-danger p-1 btn-square-32" 
                                                    title="Delete"
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#deleteModal{{ req.id }}">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% else %}
                            <tr><td colspan="7" class="text-center">No card requests found.</td></tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <!-- Modals Section (Outside Table to Prevent Flashing) -->
    {% if cardRequests|length > 0 %}
        {% for req in cardRequests %}
            <!-- View Modal -->
            <div class="modal fade" id="viewModal{{ req.id }}" tabindex="-1">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title"><i class="bi bi-eye me-2"></i>Card Request Details</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="fw-bold">Request ID:</label>
                                    <p>{{ req.id }}</p>
                                </div>
                                <div class="col-md-6">
                                    <label class="fw-bold">Request Date:</label>
                                    <p>{{ req.request_date|date('d/m/Y H:i') }}</p>
                                </div>
                                <div class="col-md-6">
                                    <label class="fw-bold">User ID:</label>
                                    <p>{{ req.user_id }}</p>
                                </div>
                                <div class="col-md-6">
                                    <label class="fw-bold">Patient UID:</label>
                                    <p>{{ req.patient_uid }}</p>
                                </div>
                                <div class="col-md-6">
                                    <label class="fw-bold">Card Type:</label>
                                    <p>{{ req.card_type|capitalize }}</p>
                                </div>
                                <div class="col-md-6">
                                    <label class="fw-bold">Status:</label>
                                    <p>
                                        <span class="badge bg-{{ req.status == 'pending' ? 'secondary' : (req.status == 'printing' ? 'info' : (req.status == 'posted' ? 'primary' : (req.status == 'delivered' ? 'success' : (req.status == 'cancelled' ? 'danger' : 'warning'))) ) }}">
                                            {{ req.status|replace({'_': ' '})|capitalize }}
                                        </span>
                                    </p>
                                </div>
                                <div class="col-12">
                                    <label class="fw-bold">Delivery Address:</label>
                                    <p>{{ req.delivery_address }}<br>{{ req.delivery_postcode }}</p>
                                </div>
                                <div class="col-md-6">
                                    <label class="fw-bold">Contact Email:</label>
                                    <p>{{ req.contact_email ?: 'N/A' }}</p>
                                </div>
                                <div class="col-md-6">
                                    <label class="fw-bold">Contact Phone:</label>
                                    <p>{{ req.contact_phone ?: 'N/A' }}</p>
                                </div>
                                <div class="col-md-6">
                                    <label class="fw-bold">Tracking Number:</label>
                                    <p>{{ req.tracking_number ?: 'Not assigned yet' }}</p>
                                </div>
                                <div class="col-md-6">
                                    <label class="fw-bold">Updated At:</label>
                                    <p>{{ req.updated_at|date('d/m/Y H:i') }}</p>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Edit Modal -->
            <div class="modal fade" id="editModal{{ req.id }}" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <form method="post" action="/admin/card-requests/status">
                            <input type="hidden" name="{{ csrf.keys.name }}" value="{{ csrf.name }}">
                            <input type="hidden" name="{{ csrf.keys.value }}" value="{{ csrf.value }}">
                            <input type="hidden" name="request_id" value="{{ req.id }}">
                            
                            <div class="modal-header">
                                <h5 class="modal-title"><i class="bi bi-pencil me-2"></i>Edit Card Request</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Request ID: #{{ req.id }}</label>
                                    <p class="text-muted small">Patient UID: {{ req.patient_uid }}</p>
                                </div>
                                
                                <div class="mb-3">
                                    <label for="status{{ req.id }}" class="form-label">Status <span class="text-danger">*</span></label>
                                    <select class="form-select" id="status{{ req.id }}" name="status" required>
                                        <option value="pending" {% if req.status == 'pending' %}selected{% endif %}>Pending</option>
                                        <option value="approved" {% if req.status == 'approved' %}selected{% endif %}>Approved</option>
                                        <option value="printing" {% if req.status == 'printing' %}selected{% endif %}>Printing</option>
                                        <option value="quality_check" {% if req.status == 'quality_check' %}selected{% endif %}>Quality Check</option>
                                        <option value="posted" {% if req.status == 'posted' %}selected{% endif %}>Posted</option>
                                        <option value="delivered" {% if req.status == 'delivered' %}selected{% endif %}>Delivered</option>
                                        <option value="cancelled" {% if req.status == 'cancelled' %}selected{% endif %}>Cancelled</option>
                                    </select>
                                </div>
                                
                                <div class="mb-3">
                                    <label for="tracking{{ req.id }}" class="form-label">Tracking Number</label>
                                    <input type="text" 
                                           class="form-control" 
                                           id="tracking{{ req.id }}" 
                                           name="tracking_number" 
                                           value="{{ req.tracking_number }}"
                                           placeholder="Enter tracking number">
                                    <div class="form-text">Add tracking number when status is Posted or Delivered</div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-check-circle me-1"></i>Update Request
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            
            <!-- Delete Modal -->
            <div class="modal fade" id="deleteModal{{ req.id }}" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <form method="post" action="/admin/card-requests/delete">
                            <input type="hidden" name="{{ csrf.keys.name }}" value="{{ csrf.name }}">
                            <input type="hidden" name="{{ csrf.keys.value }}" value="{{ csrf.value }}">
                            <input type="hidden" name="request_id" value="{{ req.id }}">
                            
                            <div class="modal-header bg-danger text-white">
                                <h5 class="modal-title"><i class="bi bi-exclamation-triangle me-2"></i>Confirm Deletion</h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <div class="alert alert-warning">
                                    <i class="bi bi-exclamation-circle me-2"></i>
                                    <strong>Warning:</strong> This action cannot be undone!
                                </div>
                                
                                <p>Are you sure you want to delete this card request?</p>
                                
                                <div class="bg-light p-3 rounded">
                                    <p class="mb-1"><strong>Request ID:</strong> #{{ req.id }}</p>
                                    <p class="mb-1"><strong>Patient UID:</strong> {{ req.patient_uid }}</p>
                                    <p class="mb-1"><strong>Status:</strong> {{ req.status|replace({'_': ' '})|capitalize }}</p>
                                    <p class="mb-0"><strong>Requested:</strong> {{ req.request_date|date('d/m/Y H:i') }}</p>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash me-1"></i>Delete Request
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endif %}
    
</div>
{% endblock %}