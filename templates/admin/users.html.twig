{% extends 'layouts/base.html.twig' %}

{% block content %}
    {# Pagination and filtering handled in controller #}
  
<div class="container py-5">
  <!-- Dashboard Header Styled Like Support Page -->
    <div class="admin-header section-gradient-light rounded-4 shadow-sm mb-4 p-4 mt-80">
        <div class="d-flex align-items-center justify-content-between">
            <div>
                <h1 class="fw-bold text-purple-primary mb-2">
                    <i class="bi bi-person-badge-fill me-2"></i>
                    {{ dashboardTitle|default('User Management') }}
                </h1>
                <p class="lead text-secondary mb-0">
                Welcome, {{ currentUser.first_name ~ ' ' ~ currentUser.surname }}
                {{ dashboardSubtitle|default('User Management Dashboard.') }}
                </p>
            </div>
        </div>
    </div>
      <div class="row mb-4">
        <div class="col-lg-2 col-md-4 col-6 mb-3">
            <div class="admin-stat-card card h-100">
                <div class="card-body text-center">
                    <div class="admin-stat-icon bg-primary bg-opacity-10 mb-2">
                        <i class="bi bi-people text-primary"></i>
                    </div>
                    <div class="admin-stat-value h4 mb-0">{{ stats.total_users|default(0) }}</div>
                    <div class="admin-stat-label small">Total Users</div>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-4 col-6 mb-3">
            <div class="admin-stat-card card h-100">
                <div class="card-body text-center">
                    <div class="admin-stat-icon bg-info bg-opacity-10 mb-2">
                        <i class="bi bi-clock text-info"></i>
                    </div>
                    {% set now = "now"|date('U') %}
                    {% set active_24h_count = users|filter(u => u.updated_at and (now - u.updated_at|date('U')) <= 86400)|length %}
                    <div class="admin-stat-value h4 mb-0">{{ active_24h_count }}</div>
                    <div class="admin-stat-label small">Active (24h)</div>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-4 col-6 mb-3">
            <div class="admin-stat-card card h-100">
                <div class="card-body text-center">
                    <div class="admin-stat-icon bg-danger bg-opacity-10 mb-2">
                        <i class="bi bi-shield-lock text-danger"></i>
                    </div>
                    <div class="admin-stat-value h4 mb-0">{{ stats.admins|default(0) }}</div>
                    <div class="admin-stat-label small">Admins</div>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-4 col-6 mb-3">
            <div class="admin-stat-card card h-100">
                <div class="card-body text-center">
                    <div class="admin-stat-icon bg-success bg-opacity-10 mb-2">
                        <i class="bi bi-person text-success"></i>
                    </div>
                    <div class="admin-stat-value h4 mb-0">{{ stats.patients|default(0) }}</div>
                    <div class="admin-stat-label small">Patients</div>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-4 col-6 mb-3">
            <div class="admin-stat-card card h-100">
                <div class="card-body text-center">
                    <div class="admin-stat-icon bg-primary bg-opacity-10 mb-2">
                        <i class="bi bi-hospital text-primary"></i>
                    </div>
                    <div class="admin-stat-value h4 mb-0">{{ stats.nhs_users|default(0) }}</div>
                    <div class="admin-stat-label small">NHS Users</div>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-4 col-6 mb-3">
            <div class="admin-stat-card card h-100">
                <div class="card-body text-center">
                    <div class="admin-stat-icon bg-warning bg-opacity-10 mb-2">
                        <i class="bi bi-people-fill text-warning"></i>
                    </div>
                    <div class="admin-stat-value h4 mb-0">{{ stats.family|default(0) }}</div>
                    <div class="admin-stat-label small">Family</div>
                </div>
            </div>
        </div>
    </div>
    <div class="card mt-4">
        <div class="card-header d-flex flex-wrap align-items-center justify-content-between gap-2">
            <h5 class="mb-0"><i class="bi bi-table me-2"></i>Users</h5>
            <div class="w-100">
                <form class="d-flex" method="get">
                {# Get unique roles for dropdown #}
                {% set roles = [] %}
                {% for u in users %}
                    {% if u.role not in roles %}
                        {% set roles = roles|merge([u.role]) %}
                    {% endif %}
                {% endfor %}
                {% set roles = roles|sort %}
                <select name="role" class="form-select form-select-sm w-100 me-2">
                    <option value="">All Roles</option>
                    {% for role in roles %}
                        <option value="{{ role }}" {% if role == selected_role %}selected{% endif %}>{{ role|capitalize }}</option>
                    {% endfor %}
                </select>
                <button type="submit" class="btn btn-sm btn-primary">Filter</button>
                </form>
            </div>
            </form>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Registered</th>
                        <th>Last Login</th>
                        <th>Last Activity</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in paged_users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.first_name }} {{ user.last_name }}</td>
                        <td><a href="mailto:{{ user.email }}">{{ user.email }}</a></td>
                        <td>
                            {% set role_badge = {
                                'admin': 'bg-danger',
                                'patient': 'bg-success',
                                'nhs_user': 'bg-primary',
                                'family': 'bg-warning',
                                'healthcare_worker': 'bg-info'
                            }[user.role]|default('bg-secondary') %}
                            <span class="badge {{ role_badge }}">{{ user.role|capitalize }}</span>
                        </td>
                        <td>{{ user.created_at|date('Y-m-d H:i') }}</td>
                        <td>{% if user.updated_at %}{{ user.updated_at|date('Y-m-d H:i') }}{% else %}Never{% endif %}</td>
                        {# Optionally, highlight if user was active in last 24h #}
                        {% set now = "now"|date('U') %}
                        {% set updated = user.updated_at ? user.updated_at|date('U') : 0 %}
                        {% if updated and (now - updated) <= 86400 %}
                            <td><span class="badge bg-info">Active (24h)</span></td>
                        {% else %}
                            <td><span class="badge bg-secondary">Inactive</span></td>
                        {% endif %}
                        <td>
                            {% if user.active == 0 %}
                                <span class="badge bg-danger">Suspended</span>
                            {% else %}
                                <span class="badge bg-success">Active</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if user.role != 'admin' %}
                                {% if user.active == 0 %}
                                <form method="post" action="/admin/users/suspend" class="inline-form">
                                    <input type="hidden" name="{{ csrf.keys.name }}" value="{{ csrf.name }}">
                                    <input type="hidden" name="{{ csrf.keys.value }}" value="{{ csrf.value }}">
                                    <input type="hidden" name="user_id" value="{{ user.id }}">
                                    <input type="hidden" name="action" value="unsuspend">
                                    <button type="submit" class="btn btn-sm btn-outline-success" title="Reactivate Account"><i class="bi bi-check-circle"></i></button>
                                </form>
                                {% else %}
                                <form method="post" action="/admin/users/suspend" class="inline-form">
                                    <input type="hidden" name="{{ csrf.keys.name }}" value="{{ csrf.name }}">
                                    <input type="hidden" name="{{ csrf.keys.value }}" value="{{ csrf.value }}">
                                    <input type="hidden" name="user_id" value="{{ user.id }}">
                                    <input type="hidden" name="action" value="suspend">
                                    <button type="submit" class="btn btn-sm btn-outline-warning" title="Suspend Account"><i class="bi bi-ban"></i></button>
                                </form>
                                {% endif %}
                                <form method="post" action="/admin/users/delete" class="inline-form">
                                    <input type="hidden" name="{{ csrf.keys.name }}" value="{{ csrf.name }}">
                                    <input type="hidden" name="{{ csrf.keys.value }}" value="{{ csrf.value }}">
                                    <input type="hidden" name="user_id" value="{{ user.id }}">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete Account" onclick="return confirm('Are you sure you want to permanently delete this user account? This action cannot be undone!');"><i class="bi bi-trash"></i></button>
                                </form>
                            {% else %}
                                <span class="text-muted small">Admin</span>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr><td colspan="8" class="text-center text-muted py-4">No users found.</td></tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        {% if total_pages > 1 %}
        <nav aria-label="User pagination" class="mt-3">
            <ul class="pagination pagination-sm justify-content-center mb-0">
                {% if page > 1 %}
                <li class="page-item">
                    <a class="page-link" href="?{% if selected_role %}role={{ selected_role }}&{% endif %}page={{ page - 1 }}">&laquo;</a>
                </li>
                {% endif %}
                {% for p in 1..total_pages %}
                <li class="page-item {% if p == page %}active{% endif %}">
                    <a class="page-link" href="?{% if selected_role %}role={{ selected_role }}&{% endif %}page={{ p }}">{{ p }}</a>
                </li>
                {% endfor %}
                {% if page < total_pages %}
                <li class="page-item">
                    <a class="page-link" href="?{% if selected_role %}role={{ selected_role }}&{% endif %}page={{ page + 1 }}">&raquo;</a>
                </li>
                {% endif %}
            </ul>
        </nav>
        {% endif %}
    </div>

</div>
{% endblock %}