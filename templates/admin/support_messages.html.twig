{% extends 'layouts/base.html.twig' %}

{% block content %}
<style>
    /* Allow dropdowns to escape table container without flickering */
    .table-responsive {
        overflow-x: auto;
        overflow-y: visible;
    }
    /* Position dropdowns relative to body to prevent clipping */
    .dropdown-menu {
        position: fixed !important;
        z-index: 1050;
    }
    /* Make dropdown items more visible */
    .dropdown-item {
        padding: 0.5rem 1rem;
    }
    .dropdown-item:hover {
        background-color: #f8f9fa;
    }
</style>

<div class="container py-5">
  <!-- Dashboard Header Styled Like Support Page -->
    <div class="admin-header section-gradient-light rounded-4 shadow-sm mb-4 p-4 mt-80">
        <div class="d-flex align-items-center justify-content-between">
            <div>
                <h1 class="fw-bold text-purple-primary mb-2">
                    <i class="bi bi-person-badge-fill me-2"></i>
                    {{ dashboardTitle|default('Support Messages Management') }}
                </h1>
                <p class="lead text-secondary mb-0">
                Welcome, {{ currentUser.first_name ~ ' ' ~ currentUser.surname }}
                {{ dashboardSubtitle|default('Support Messages Management Dashboard.') }}
                </p>
            </div>
        </div>
    </div>

    <!-- Flash Messages -->
    {% if session.flash_message %}
        <div class="alert alert-{{ session.flash_type|default('info') }} alert-dismissible fade show" role="alert">
            <i class="bi bi-{{ session.flash_type == 'success' ? 'check-circle' : (session.flash_type == 'danger' ? 'exclamation-triangle' : 'info-circle') }} me-2"></i>
            {{ session.flash_message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endif %}

    <div class="row mb-4">
        <!-- Total Messages -->
        <div class="col-lg-3 col-md-6 col-12 mb-3">
            <div class="admin-stat-card card h-100">
                <div class="card-body text-center">
                    <div class="d-flex flex-column align-items-center justify-content-center">
                        <div class="d-flex align-items-center mb-1">
                            <span class="admin-stat-value h4 mb-0 me-2">{{ widgetStats.total }}</span>
                            <span class="admin-stat-icon bg-primary bg-opacity-10 rounded-circle p-2"><i class="bi bi-envelope text-primary"></i></span>
                        </div>
                        <div class="admin-stat-label small">Total Messages</div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Responded -->
        <div class="col-lg-3 col-md-6 col-12 mb-3">
            <div class="admin-stat-card card h-100">
                <div class="card-body text-center">
                    <div class="d-flex flex-column align-items-center justify-content-center">
                        <div class="d-flex align-items-center mb-1">
                            <span class="admin-stat-value h4 mb-0 me-2">{{ widgetStats.responded }}</span>
                            <span class="admin-stat-icon bg-success bg-opacity-10 rounded-circle p-2"><i class="bi bi-check2-circle text-success"></i></span>
                        </div>
                        <div class="admin-stat-label small">Responded</div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Pending -->
        <div class="col-lg-3 col-md-6 col-12 mb-3">
            <div class="admin-stat-card card h-100">
                <div class="card-body text-center">
                    <div class="d-flex flex-column align-items-center justify-content-center">
                        <div class="d-flex align-items-center mb-1">
                            <span class="admin-stat-value h4 mb-0 me-2">{{ widgetStats.pending }}</span>
                            <span class="admin-stat-icon bg-warning bg-opacity-10 rounded-circle p-2"><i class="bi bi-hourglass-split text-warning"></i></span>
                        </div>
                        <div class="admin-stat-label small">Pending</div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Response Rate -->
        <div class="col-lg-3 col-md-6 col-12 mb-3">
            <div class="admin-stat-card card h-100">
                <div class="card-body text-center">
                    <div class="d-flex flex-column align-items-center justify-content-center">
                        <div class="d-flex align-items-center mb-1">
                            <span class="admin-stat-value h4 mb-0 me-2">{{ widgetStats.response_rate }}%</span>
                            <span class="admin-stat-icon bg-info bg-opacity-10 rounded-circle p-2"><i class="bi bi-bar-chart-line text-info"></i></span>
                        </div>
                        <div class="admin-stat-label small">Response Rate</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
    <!-- Support Messages Table -->
    <div class="card mt-4">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0"><i class="bi bi-table me-2"></i>Support Messages</h5>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Date & Time</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Message</th>
                        <th>Status</th>
                        <th>IP Address</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% if messages|length > 0 %}
                    {% for msg in messages %}
                        <tr>
                            <td>{{ msg.created_at|date('Y-m-d H:i') }}</td>
                            <td>{{ msg.name }}</td>
                            <td><a href="mailto:{{ msg.email }}">{{ msg.email }}</a></td>
                            <td>{{ msg.message|length > 60 ? msg.message|slice(0,60) ~ '...' : msg.message }}</td>
                            <td>
                                {% if msg.status == 'responded' %}
                                    <span class="badge bg-info">Responded</span>
                                {% elseif msg.status == 'resolved' %}
                                    <span class="badge bg-success">Resolved</span>
                                {% elseif msg.status == 'closed' %}
                                    <span class="badge bg-secondary">Closed</span>
                                {% elseif msg.status == 'in_progress' %}
                                    <span class="badge bg-warning text-dark">In Progress</span>
                                {% elseif msg.has_response %}
                                    <span class="badge bg-success">Responded</span>
                                {% else %}
                                    <span class="badge bg-light text-dark">New</span>
                                {% endif %}
                            </td>
                            <td>{{ msg.ip_address }}</td>
                            <td class="text-nowrap">
                                <!-- Status Dropdown -->
                                <div class="btn-group dropstart" role="group">
                                    <button type="button" class="btn btn-sm btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-pencil-square"></i> Status
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <form method="POST" action="/admin/support-messages/status" class="d-inline">
                                                <input type="hidden" name="{{ csrf.keys.name }}" value="{{ csrf.name }}">
                                                <input type="hidden" name="{{ csrf.keys.value }}" value="{{ csrf.value }}">
                                                <input type="hidden" name="id" value="{{ msg.id }}">
                                                <input type="hidden" name="status" value="new">
                                                <button type="submit" class="dropdown-item">
                                                    <i class="bi bi-circle text-secondary"></i> New
                                                </button>
                                            </form>
                                        </li>
                                        <li>
                                            <form method="POST" action="/admin/support-messages/status" class="d-inline">
                                                <input type="hidden" name="{{ csrf.keys.name }}" value="{{ csrf.name }}">
                                                <input type="hidden" name="{{ csrf.keys.value }}" value="{{ csrf.value }}">
                                                <input type="hidden" name="id" value="{{ msg.id }}">
                                                <input type="hidden" name="status" value="in_progress">
                                                <button type="submit" class="dropdown-item">
                                                    <i class="bi bi-hourglass-split text-warning"></i> In Progress
                                                </button>
                                            </form>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form method="POST" action="/admin/support-messages/status" class="d-inline">
                                                <input type="hidden" name="{{ csrf.keys.name }}" value="{{ csrf.name }}">
                                                <input type="hidden" name="{{ csrf.keys.value }}" value="{{ csrf.value }}">
                                                <input type="hidden" name="id" value="{{ msg.id }}">
                                                <input type="hidden" name="status" value="responded">
                                                <button type="submit" class="dropdown-item">
                                                    <i class="bi bi-reply-fill text-info"></i> Responded
                                                </button>
                                            </form>
                                        </li>
                                        <li>
                                            <form method="POST" action="/admin/support-messages/status" class="d-inline">
                                                <input type="hidden" name="{{ csrf.keys.name }}" value="{{ csrf.name }}">
                                                <input type="hidden" name="{{ csrf.keys.value }}" value="{{ csrf.value }}">
                                                <input type="hidden" name="id" value="{{ msg.id }}">
                                                <input type="hidden" name="status" value="resolved">
                                                <button type="submit" class="dropdown-item">
                                                    <i class="bi bi-check-circle text-success"></i> Resolved
                                                </button>
                                            </form>
                                        </li>
                                        <li>
                                            <form method="POST" action="/admin/support-messages/status" class="d-inline">
                                                <input type="hidden" name="{{ csrf.keys.name }}" value="{{ csrf.name }}">
                                                <input type="hidden" name="{{ csrf.keys.value }}" value="{{ csrf.value }}">
                                                <input type="hidden" name="id" value="{{ msg.id }}">
                                                <input type="hidden" name="status" value="closed">
                                                <button type="submit" class="dropdown-item">
                                                    <i class="bi bi-x-circle text-muted"></i> Closed
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                                
                                <!-- Delete Button -->
                                <form method="POST" action="/admin/support-messages/delete" class="d-inline ms-1">
                                    <input type="hidden" name="{{ csrf.keys.name }}" value="{{ csrf.name }}">
                                    <input type="hidden" name="{{ csrf.keys.value }}" value="{{ csrf.value }}">
                                    <input type="hidden" name="id" value="{{ msg.id }}">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete" onclick="return confirm('Are you sure you want to delete this message?');">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr><td colspan="7" class="text-center text-muted py-4">No support messages found.</td></tr>
                {% endif %}
                </tbody>
            </table>
        </div>
    </div>

</div>
{% endblock %}