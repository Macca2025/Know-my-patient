{% extends 'layouts/base.html.twig' %}

{% block content %}

<div class="container py-5">
  <!-- Dashboard Header Styled Like Support Page -->
    <div class="admin-header section-gradient-light rounded-4 shadow-sm mb-4 p-4 mt-80">
        <div class="d-flex align-items-center justify-content-between">
            <div>
                <h1 class="fw-bold text-purple-primary mb-2">
                    <i class="bi bi-person-badge-fill me-2"></i>
                    {{ dashboardTitle|default('Testimonials Management') }}
                </h1>
                <p class="lead text-secondary mb-0">
                Welcome, {{ currentUser.first_name ~ ' ' ~ currentUser.surname }}
                {{ dashboardSubtitle|default('Testimonials Management Dashboard.') }}
                </p>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <h3 class="mb-4">All Testimonials</h3>
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Testimonial</th>
                            <th>Name</th>
                            <th>Role</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for t in testimonials %}
                            <tr>
                                <td>{{ t.id }}</td>
                                <td class="testimonial-cell">{{ t.testimonial }}</td>
                                <td>{{ t.name }}</td>
                                <td>{{ t.role|default('-') }}</td>
                                <td>
                                    <form method="post" action="/admin/testimonials/delete" class="inline-block">
                                        <input type="hidden" name="id" value="{{ t.id }}">
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this testimonial?')">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr><td colspan="5" class="text-center">No testimonials found.</td></tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}