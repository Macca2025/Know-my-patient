{% extends 'layouts/base.html.twig' %}
{% block content %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Header -->
            <div class="text-center mb-5">
                <i class="bi bi-universal-access text-primary" style="font-size: 3rem;"></i>
                <h1 class="display-4 fw-bold mt-3 text-purple-primary">Accessibility Statement</h1>
                <p class="lead text-muted">Our commitment to making healthcare accessible to everyone</p>
                <p class="text-muted"><small>Last updated: {{ "now"|date("d F Y") }}</small></p>
            </div>

            <!-- Main Content Card -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body p-4 p-md-5">
                    
                    <!-- Introduction -->
                    <section class="mb-5">
                        <h2 class="h3 text-purple-primary mb-3">
                            <i class="bi bi-info-circle me-2"></i>Our Commitment
                        </h2>
                        <p>Digital Hospital Passport is committed to ensuring digital accessibility for people with disabilities. We are continually improving the user experience for everyone and applying the relevant accessibility standards.</p>
                        <p>We aim to conform to the Web Content Accessibility Guidelines (WCAG) 2.1 Level AA standards to ensure our platform is accessible to all users, including those with visual, auditory, motor, or cognitive disabilities.</p>
                    </section>

                    <!-- Accessibility Features -->
                    <section class="mb-5">
                        <h2 class="h3 text-purple-primary mb-4">
                            <i class="bi bi-check-circle me-2"></i>Accessibility Features
                        </h2>
                        
                        <div class="row g-4">
                            <!-- Screen Reader Support -->
                            <div class="col-md-6">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <i class="bi bi-eye-slash fs-3 text-info"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h3 class="h5">Screen Reader Compatible</h3>
                                        <p class="text-muted mb-0">Full support for JAWS, NVDA, VoiceOver, and TalkBack screen readers with proper ARIA labels and semantic HTML.</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Keyboard Navigation -->
                            <div class="col-md-6">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <i class="bi bi-keyboard fs-3 text-success"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h3 class="h5">Keyboard Navigation</h3>
                                        <p class="text-muted mb-0">All functionality is accessible via keyboard. Use Tab, Arrow keys, Enter, and Escape to navigate without a mouse.</p>
                                    </div>
                                </div>
                            </div>

                            <!-- High Contrast -->
                            <div class="col-md-6">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <i class="bi bi-circle-half fs-3 text-warning"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h3 class="h5">High Contrast Mode</h3>
                                        <p class="text-muted mb-0">Compatible with high contrast mode settings in Windows and other operating systems for improved visibility.</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Text Resizing -->
                            <div class="col-md-6">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <i class="bi bi-fonts fs-3 text-primary"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h3 class="h5">Resizable Text</h3>
                                        <p class="text-muted mb-0">Text can be resized up to 200% without loss of content or functionality using browser zoom controls.</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Clear Language -->
                            <div class="col-md-6">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <i class="bi bi-chat-quote fs-3 text-danger"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h3 class="h5">Clear Language</h3>
                                        <p class="text-muted mb-0">We use plain English and avoid jargon where possible. Medical terms are explained when necessary.</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Color Contrast -->
                            <div class="col-md-6">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <i class="bi bi-palette fs-3 text-secondary"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h3 class="h5">Color Contrast</h3>
                                        <p class="text-muted mb-0">All text meets WCAG AA standards with minimum 4.5:1 contrast ratio for normal text and 3:1 for large text.</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Alt Text -->
                            <div class="col-md-6">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <i class="bi bi-image fs-3 text-info"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h3 class="h5">Alternative Text</h3>
                                        <p class="text-muted mb-0">All images include descriptive alt text for screen readers. Decorative images are properly marked.</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Focus Indicators -->
                            <div class="col-md-6">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <i class="bi bi-cursor fs-3 text-success"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h3 class="h5">Visible Focus Indicators</h3>
                                        <p class="text-muted mb-0">Clear visual indicators show which element has keyboard focus, making navigation easier.</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Form Labels -->
                            <div class="col-md-6">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <i class="bi bi-input-cursor-text fs-3 text-warning"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h3 class="h5">Form Accessibility</h3>
                                        <p class="text-muted mb-0">All form fields have clear labels, instructions, and error messages. Required fields are clearly marked.</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Mobile Responsive -->
                            <div class="col-md-6">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <i class="bi bi-phone fs-3 text-primary"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h3 class="h5">Mobile Responsive</h3>
                                        <p class="text-muted mb-0">Fully responsive design works on all devices. Touch targets are large enough for easy interaction.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- Keyboard Shortcuts -->
                    <section class="mb-5">
                        <h2 class="h3 text-purple-primary mb-3">
                            <i class="bi bi-command me-2"></i>Keyboard Shortcuts
                        </h2>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th scope="col">Key</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td><kbd>Tab</kbd></td>
                                        <td>Move to next interactive element</td>
                                    </tr>
                                    <tr>
                                        <td><kbd>Shift</kbd> + <kbd>Tab</kbd></td>
                                        <td>Move to previous interactive element</td>
                                    </tr>
                                    <tr>
                                        <td><kbd>Enter</kbd> or <kbd>Space</kbd></td>
                                        <td>Activate buttons and links</td>
                                    </tr>
                                    <tr>
                                        <td><kbd>Esc</kbd></td>
                                        <td>Close modals and dropdowns</td>
                                    </tr>
                                    <tr>
                                        <td><kbd>Arrow Keys</kbd></td>
                                        <td>Navigate within dropdown menus and lists</td>
                                    </tr>
                                    <tr>
                                        <td><kbd>Ctrl</kbd> + <kbd>+</kbd> / <kbd>-</kbd></td>
                                        <td>Zoom in/out (browser)</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </section>

                    <!-- Assistive Technologies -->
                    <section class="mb-5">
                        <h2 class="h3 text-purple-primary mb-3">
                            <i class="bi bi-headset me-2"></i>Compatible Assistive Technologies
                        </h2>
                        <p>Our platform is tested with and supports:</p>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <ul class="list-unstyled">
                                    <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>JAWS (Windows)</li>
                                    <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>NVDA (Windows)</li>
                                    <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>VoiceOver (macOS/iOS)</li>
                                    <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>TalkBack (Android)</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <ul class="list-unstyled">
                                    <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Dragon NaturallySpeaking (Voice control)</li>
                                    <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>ZoomText (Screen magnification)</li>
                                    <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Windows Magnifier</li>
                                    <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Browser built-in accessibility tools</li>
                                </ul>
                            </div>
                        </div>
                    </section>

                    <!-- Standards Compliance -->
                    <section class="mb-5">
                        <h2 class="h3 text-purple-primary mb-3">
                            <i class="bi bi-award me-2"></i>Standards & Compliance
                        </h2>
                        <div class="alert alert-info" role="alert">
                            <i class="bi bi-info-circle me-2"></i>
                            <strong>WCAG 2.1 Level AA Compliance:</strong> We strive to meet Web Content Accessibility Guidelines (WCAG) 2.1 Level AA standards, which is the international standard for web accessibility.
                        </div>
                        <p>We also comply with:</p>
                        <ul>
                            <li><strong>UK Equality Act 2010:</strong> Ensuring equal access to our services</li>
                            <li><strong>NHS Accessibility Standards:</strong> Meeting healthcare-specific requirements</li>
                            <li><strong>Public Sector Bodies Accessibility Regulations 2018:</strong> As applicable to healthcare services</li>
                            <li><strong>ARIA (Accessible Rich Internet Applications):</strong> For enhanced screen reader support</li>
                        </ul>
                    </section>

                    <!-- Known Limitations -->
                    <section class="mb-5">
                        <h2 class="h3 text-purple-primary mb-3">
                            <i class="bi bi-exclamation-triangle me-2"></i>Known Limitations
                        </h2>
                        <p>We are continuously working to improve accessibility. Current known limitations include:</p>
                        <ul>
                            <li>Some PDF documents may not be fully accessible - we are working to provide accessible alternatives</li>
                            <li>Certain third-party embedded content may have varying levels of accessibility</li>
                            <li>Some legacy features are being updated to meet current accessibility standards</li>
                        </ul>
                        <p class="mb-0">We are actively addressing these issues and welcome your feedback to help us improve.</p>
                    </section>

                    <!-- Browser Accessibility Settings -->
                    <section class="mb-5">
                        <h2 class="h3 text-purple-primary mb-3">
                            <i class="bi bi-gear me-2"></i>Browser Accessibility Settings
                        </h2>
                        <p>You can enhance accessibility using your browser's built-in features:</p>
                        <div class="accordion" id="browserAccordion">
                            <!-- Chrome -->
                            <div class="accordion-item">
                                <h3 class="accordion-header" id="chromeHeading">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#chromeCollapse" aria-expanded="false" aria-controls="chromeCollapse">
                                        <i class="bi bi-browser-chrome me-2 text-primary"></i>Google Chrome
                                    </button>
                                </h3>
                                <div id="chromeCollapse" class="accordion-collapse collapse" aria-labelledby="chromeHeading" data-bs-parent="#browserAccordion">
                                    <div class="accordion-body">
                                        <ol>
                                            <li>Go to Settings → Accessibility</li>
                                            <li>Enable "Live Caption" for automatic captions</li>
                                            <li>Adjust font size under "Appearance"</li>
                                            <li>Use Ctrl/Cmd + + or - to zoom</li>
                                            <li>Install Chrome accessibility extensions from Web Store</li>
                                        </ol>
                                    </div>
                                </div>
                            </div>

                            <!-- Firefox -->
                            <div class="accordion-item">
                                <h3 class="accordion-header" id="firefoxHeading">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#firefoxCollapse" aria-expanded="false" aria-controls="firefoxCollapse">
                                        <i class="bi bi-browser-firefox me-2 text-warning"></i>Mozilla Firefox
                                    </button>
                                </h3>
                                <div id="firefoxCollapse" class="accordion-collapse collapse" aria-labelledby="firefoxHeading" data-bs-parent="#browserAccordion">
                                    <div class="accordion-body">
                                        <ol>
                                            <li>Go to Settings → General → Language and Appearance</li>
                                            <li>Adjust font size and colors</li>
                                            <li>Use Ctrl/Cmd + + or - to zoom</li>
                                            <li>Enable "Always show scrollbars" for better navigation</li>
                                            <li>Install Firefox accessibility add-ons</li>
                                        </ol>
                                    </div>
                                </div>
                            </div>

                            <!-- Safari -->
                            <div class="accordion-item">
                                <h3 class="accordion-header" id="safariHeading">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#safariCollapse" aria-expanded="false" aria-controls="safariCollapse">
                                        <i class="bi bi-browser-safari me-2 text-info"></i>Safari
                                    </button>
                                </h3>
                                <div id="safariCollapse" class="accordion-collapse collapse" aria-labelledby="safariHeading" data-bs-parent="#browserAccordion">
                                    <div class="accordion-body">
                                        <ol>
                                            <li>Go to Safari → Preferences → Websites</li>
                                            <li>Use Cmd + + or - to zoom</li>
                                            <li>Enable VoiceOver: System Preferences → Accessibility</li>
                                            <li>Customize reader mode for easier reading</li>
                                            <li>Use "Speak Selection" to hear text read aloud</li>
                                        </ol>
                                    </div>
                                </div>
                            </div>

                            <!-- Edge -->
                            <div class="accordion-item">
                                <h3 class="accordion-header" id="edgeHeading">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#edgeCollapse" aria-expanded="false" aria-controls="edgeCollapse">
                                        <i class="bi bi-browser-edge me-2 text-success"></i>Microsoft Edge
                                    </button>
                                </h3>
                                <div id="edgeCollapse" class="accordion-collapse collapse" aria-labelledby="edgeHeading" data-bs-parent="#browserAccordion">
                                    <div class="accordion-body">
                                        <ol>
                                            <li>Go to Settings → Accessibility</li>
                                            <li>Enable "Read Aloud" for text-to-speech</li>
                                            <li>Adjust font size under "Appearance"</li>
                                            <li>Use Ctrl/Cmd + + or - to zoom</li>
                                            <li>Enable high contrast themes</li>
                                        </ol>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- Feedback Section -->
                    <section class="mb-0">
                        <h2 class="h3 text-purple-primary mb-3">
                            <i class="bi bi-chat-dots me-2"></i>Feedback & Support
                        </h2>
                        <div class="alert alert-success" role="alert">
                            <h4 class="alert-heading">
                                <i class="bi bi-envelope me-2"></i>We Welcome Your Feedback
                            </h4>
                            <p>We are committed to improving accessibility and welcome your feedback. If you encounter any accessibility barriers or have suggestions for improvement, please contact us:</p>
                            <hr>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <p class="mb-2"><strong>Email:</strong></p>
                                    <a href="mailto:accessibility@knowmypatient.com" class="btn btn-outline-success btn-sm">
                                        <i class="bi bi-envelope me-2"></i>accessibility@knowmypatient.com
                                    </a>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-2"><strong>Support Page:</strong></p>
                                    <a href="{{ url_for('support') }}" class="btn btn-outline-success btn-sm">
                                        <i class="bi bi-question-circle me-2"></i>Visit Support Center
                                    </a>
                                </div>
                            </div>
                            <p class="mt-3 mb-0"><small>We aim to respond to accessibility feedback within 5 business days and will work with you to provide the information or assistance you need in an accessible format.</small></p>
                        </div>
                    </section>

                </div>
            </div>

            <!-- Quick Links -->
            <div class="text-center mt-4">
                <p class="text-muted">Related Information:</p>
                <div class="d-flex flex-wrap justify-content-center gap-2">
                    <a href="{{ url_for('privacy_policy') }}" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-shield-lock me-1"></i>Privacy Policy
                    </a>
                    <a href="{{ url_for('terms_of_service') }}" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-file-text me-1"></i>Terms of Service
                    </a>
                    <a href="{{ url_for('support') }}" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-headset me-1"></i>Support
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}
