{% extends 'layouts/base.html.twig' %}
{% block content %}
<div class="d-flex flex-column min-vh-100 section-gradient-light">
        <main class="flex-grow-1 d-flex justify-content-center align-items-center py-5 main-content">
                <div class="register-card bg-white rounded-4 p-4 p-lg-5 mt-5 mb-4 border-0 login-card-width no-box-shadow">
    {# Success and error messages #}
    {% if success is defined and success %}
        <div class="alert alert-success alert-dismissible fade show pe-5 text-center" role="alert">
            <i class="bi bi-check-circle me-2"></i>Registration successful! You can now log in.
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% elseif errors is defined and errors %}
        {% if errors.general is defined %}
            <div class="alert alert-danger alert-dismissible fade show pe-5 text-center" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>{{ errors.general }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endif %}
        {% set has_field_errors = false %}
        {% for field, msg in errors %}
            {% if field != 'general' %}{% set has_field_errors = true %}{% endif %}
        {% endfor %}
        {% if has_field_errors %}
            <div class="alert alert-danger alert-dismissible fade show pe-5" role="alert">
                <h6 class="alert-heading fw-bold mb-2">
                    <i class="bi bi-exclamation-triangle me-2"></i>Please correct the following errors:
                </h6>
                <ul class="mb-0 ps-3">
                    {% for field, msg in errors %}
                        {% if field != 'general' %}<li>{{ msg }}</li>{% endif %}
                    {% endfor %}
                </ul>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endif %}
    {% endif %}
                            <div class="text-center mb-4">
                                <div class="register-logo-wrapper mb-4">
                                    <img src="{{ companyLogo|default('images/logo.png') }}" alt="{{ app_name|default('Know My Patient') }}" class="register-logo">
                                </div>
                                <h2 class="register-title fw-bold mb-3 text-purple-primary">Create Your Account</h2>
                                <p class="register-subtitle text-muted">Join the Digital Hospital Passport platform</p>
                            </div>
                        <form method="post" action="{{ url_for('register') }}" id="registrationForm" class="register-form">
    {# CSRF token fields #}
    {% if csrf is defined %}
        <input type="hidden" name="{{ csrf.keys.name }}" value="{{ csrf.name }}">
        <input type="hidden" name="{{ csrf.keys.value }}" value="{{ csrf.value }}">
    {% endif %}
                            <div class="form-group-modern mb-4">
                                <label class="form-label-modern fw-semibold">Register as:</label>
                                <div class="select-wrapper">
                                    <i class="bi bi-person-badge select-icon"></i>
                                    <select class="form-select-modern" name="register_type" required>
                                        <option value="" disabled {{ form.register_type is not defined or not form.register_type ? 'selected' : '' }}>Select registration type</option>
                                        <option value="patient" {{ form.register_type is defined and form.register_type|lower == 'patient' ? 'selected' : '' }}>Patient</option>
                                        <option value="family" {{ form.register_type is defined and form.register_type|lower == 'family' ? 'selected' : '' }}>Family Member</option>
                                        <option value="healthcare_worker" {{ form.register_type is defined and form.register_type|lower == 'healthcare_worker' ? 'selected' : '' }}>Healthcare Worker</option>
                                        <option value="nhs_user" {{ form.register_type is defined and form.register_type|lower == 'nhs_user' ? 'selected' : '' }}>NHS Staff</option>
                                    </select>
                                </div>
                                <div class="form-hint">
                                    <small class="text-muted">
                                        <i class="bi bi-info-circle me-1"></i>
                                        NHS Staff require official NHS email addresses
                                    </small>
                                </div>
                            </div>
                            
                            <div class="row g-3 mb-4">
                                <div class="col-md-6">
                                    <div class="form-group-modern">
                                        <label for="firstName" class="form-label-modern">First Name</label>
                                        <div class="input-wrapper">
                                            <i class="bi bi-person input-icon"></i>
                          <input type="text"
                              class="form-control-modern"
                              id="firstName"
                              name="firstName"
                              placeholder="Enter your first name"
                              value="{{ form.firstName|default('') }}"
                              required>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group-modern">
                                        <label for="lastName" class="form-label-modern">Last Name</label>
                                        <div class="input-wrapper">
                                            <i class="bi bi-person input-icon"></i>
                          <input type="text"
                              class="form-control-modern"
                              id="lastName"
                              name="lastName"
                              placeholder="Enter your last name"
                              value="{{ form.lastName|default('') }}"
                              required>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="form-group-modern mb-4">
                                <label for="email" class="form-label-modern">Email Address</label>
                                <div class="input-wrapper">
                                    <i class="bi bi-envelope input-icon"></i>
                     <input type="email"
                         class="form-control-modern"
                         id="email"
                         name="email"
                         placeholder="Enter your email address"
                         value="{{ form.email|default('') }}"
                         required>
                                </div>
                                <div class="form-hint">
                                    <small id="emailHelp" class="text-muted">
                                        <i class="bi bi-shield-check me-1"></i>
                                        We'll never share your email with anyone else
                                    </small>
                                </div>
                            </div>
                            
                            <div class="form-group-modern mb-4">
                                <label for="password" class="form-label-modern">Password</label>
                                <div class="input-wrapper">
                                    <i class="bi bi-lock input-icon"></i>
                     <input type="password"
                         class="form-control-modern"
                         name="password"
                         placeholder="Create a secure password"
                         id="password"
                         required>
                                    <button class="btn-password-toggle" type="button" id="togglePassword">
                                        <i class="bi bi-eye" id="togglePasswordIcon"></i>
                                    </button>
                                </div>
                                <div class="form-hint">
                                    <small class="password-requirements text-muted">
                                        <i class="bi bi-key me-1"></i>
                                        Must be at least 8 characters and include a special character (!@#$%^&* etc.)
                                    </small>
                                </div>
                            </div>
                            
                        <!-- Terms and Conditions -->
                        <div class="form-group-modern mb-4">
                            <div class="custom-checkbox">
                                <input type="checkbox" class="checkbox-input" id="termsCheck" name="termsCheck" required>
                                <label class="checkbox-label" for="termsCheck">
                                    <span class="checkbox-custom"></span>
                                    I agree to the <a href="{{ url_for('terms_of_service')|default('/terms-of-service') }}" target="_blank" class="link-primary-modern">Terms of Service</a> 
                                    and <a href="{{ url_for('privacy_policy')|default('/privacy-policy') }}" target="_blank" class="link-primary-modern">Privacy Policy</a>
                                </label>
                                
                            </div>
                        </div>                            <button type="submit" class="btn-modern-outline-primary w-100 mb-4" id="registerBtn" >
                                <i class="bi bi-person-plus me-2"></i>Create Account
                            </button>
                    </form>
                    
                    <div class="register-footer text-center">
                        <p class="login-link">
                            Already have an account? 
                            <a href="{{ url_for('login') }}" class="link-primary-modern">Sign in here</a>
                        </p>
                        <p class="text-muted small mt-3">
                            <a href="{{ url_for('terms_of_service')|default('/terms-of-service') }}" target="_blank" class="text-decoration-none text-muted">Terms of Service</a>
                            <span class="mx-2">•</span>
                            <a href="{{ url_for('privacy_policy')|default('/privacy-policy') }}" target="_blank" class="text-decoration-none text-muted">Privacy Policy</a>
                            <span class="mx-2">•</span>
                            <a href="{{ url_for('support')|default('/support') }}" class="text-decoration-none text-muted">Support</a>
                        </p>
                    </div>                        </div>
                    </div>
                </main>
            </div>

{% endblock %}